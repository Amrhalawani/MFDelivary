<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:paddingBottom="30dp"
    android:paddingTop="20dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="false"
    android:layout_gravity="bottom"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <TextView
        android:id="@+id/text_title_y_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="dasdhoasdioajsjdio jasiod jajisod jiaosd jioasd jioasd jioasd jioasd jiaosdj ioasdj iaosdj iaosdj iaosd j aisodj iaosdj ioj iaosdj ioasjd ioasjdi oasdj ioapoasdo pkaospd "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_y_n">

        <TextView
            android:id="@+id/text_yes"
            style="@style/RippleEffect"
            android:layout_width="140dp"
            android:layout_height="44dp"

            android:fontFamily="@font/main_font_bold"
            android:gravity="center"
            android:text="@string/yes"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_no"
            style="@style/RippleEffect"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/background_btn_fillet_contour_white"
            android:fontFamily="@font/main_font_bold"
            android:gravity="center"
            android:text="@string/no"

            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>