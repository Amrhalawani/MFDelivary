<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/main_font_reguler</item>
        <item name="android:windowTranslucentStatus">true</item>

        //above lavel 23
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>




    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/main_font_reguler</item>
        <!--        <item name="android:textSize">13sp</item>-->

    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

    <style name="tab_text" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/main_font_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/grey</item>

    </style>

    <!--   action bar-->

    <style name="actionbarTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/main_font_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="RatingBar_small_style" parent="android:style/Widget.Material.RatingBar.Small">

        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>

    </style>

    <style name="backBtnStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentBottom">true</item>


    </style>

